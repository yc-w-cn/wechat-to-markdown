{
  "name": "@yc-w-cn/wechat-to-markdown-core",
  "version": "1.2.2",
  "description": "解析微信文章 URL 为 markdown - 核心业务包",
  "author": "yc-w-cn",
  "repository": {
    "type": "git",
    "url": "https://github.com/ryan-liu/wechat-to-markdown.git"
  },
  "bugs": {
    "url": "https://github.com/ryan-liu/wechat-to-markdown/issues"
  },
  "keywords": [
    "wechat to markdown",
    "markdown"
  ],
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "type": "module",
  "license": "MIT",
  "devDependencies": {
    "@types/turndown": "^5.0.6",
    "ts-jest": "^29.2.5"
