    "splitting": false,
    "sourcemap": true,
    "clean": true,
    "external": [
      "html2markdown"
    ]
  },
  "dependencies": {
    "axios": "^1.13.2",
    "cheerio": "^1.1.2",
    "turndown": "^7.2.2"
